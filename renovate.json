{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "configMigration": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Non-Major Deps",
      "automerge": true
    },
    {
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "addLabels": [
        "actions"
      ],
      "groupName": "Actions"
    },
    {
      "matchPackagePatterns": [
        "androidx.*"
      ],
      "groupName": "AndroidX"
    },
    {
      "matchPackagePatterns": [
        ".*compose.*",
        ".*.accompanist.*",
        ".*devtools.ksp.*",
        "org.jetbrains.kotlin.*"
      ],
      "groupName": "Compose&Kotlin"
    },
    {
      "matchPackagePatterns": [
        "androidx.*"
      ],
      "addLabels": [
        "androidx"
      ]
    },
    {
      "matchPackagePatterns": [
        ".*compose.*"
      ],
      "addLabels": [
        "compose"
      ]
    },
    {
      "matchPackagePatterns": [
        ".*.accompanist.*"
      ],
      "addLabels": [
        "accompanist"
      ]
    },
    {
      "matchPackagePatterns": [
        ".*devtools.ksp.*"
      ],
      "addLabels": [
        "ksp"
      ]
    },
    {
      "matchPackagePatterns": [
        "org.jetbrains.kotlin.*"
      ],
      "addLabels": [
        "kotlin"
      ]
    }
  ]
}
