{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "androidx.*"
      ],
      "addLabels": [
        "androidx"
      ],
      "groupName": "AndroidX"
    },
    {
      "matchPackageNames": [
        ".*(.|-)compose.*",
        ".*.accompanist.*",
        "org.jetbrains.kotlin.*"
      ],
      "addLabels": [
        "accompanist",
        "compose",
        "kotlin"
      ],
      "groupName": "Compose&Kotlin"
    }
  ]
}
